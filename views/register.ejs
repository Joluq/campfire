<% include ./partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Create an account</h1>
        <div id="logbox">
          <form style="width: 30%; margin: 0 auto;" id="signup" action="/register" method="post">
            <div class="form-group">
              <input name="username" type="text" placeholder="What's your username?" pattern="^[\w]{3,16}$" autofocus="autofocus" required="required" class="input pass form-control"/>
            </div>
            <div class="form-group">
              <input name="password" type="password" placeholder="Choose a password" required="required" class="input pass form-control"/>
            </div>
            <div class="form-group">
              <input name="email" type="email" placeholder="Email address" class="input pass form-control"/>
            </div>
            <div class="form-group">
              <input name="school" type="text" placeholder="School" class="input pass form-control"/>
            </div>
            <div class="form-group">
              <input type="submit" value="Sign up!" class="inputButton form-control"/>
            </div>
          </form>
        </div>
    </div>
</div>

<% include ./partials/footer %>